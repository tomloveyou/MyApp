<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:textSize="22sp"
        android:id="@+id/item_trip_current_day_info_title"
        android:text="第3天：河池>北海"
       android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_dash_line"/>
    <TextView
        android:id="@+id/item_trip_current_day_info_dining"
        android:text="用餐：早餐午餐"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_trip_current_day_info_accommodation"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="住宿：北海酒店标间"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_trip_current_day_info_drive"
        android:text="车程：460公里"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_trip_current_day_info_desc"
        android:lineSpacingExtra="8dp"
        android:text="早餐后从美丽的河池出发，经兰海高速、南宁绕城高速到达北海，抵达北海后入住酒店，之后可以游逛北海市标志—北部湾广场，也可以前往银滩下海游玩。"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>