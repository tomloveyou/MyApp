<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RelativeLayout
            android:id="@+id/rl_left_top"
            android:layout_width="56dp"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                android:tint="@color/home_title_img_bg_color" />
        </RelativeLayout>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rl_right_top"
            android:layout_toRightOf="@+id/rl_left_top"
            tl:tl_indicator_color="@color/colorPrimary"
            tl:tl_indicator_height="2dp"
            tl:tl_indicator_width_equal_title="false"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="@color/black"
            tl:tl_textUnselectColor="@color/gray_8f" />

        <RelativeLayout
            android:id="@+id/rl_right_top"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true">

        </RelativeLayout>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>