<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp">

    <RelativeLayout
        android:id="@+id/ll_left_menu"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_menu"
            android:tint="@color/home_title_img_bg_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextStyle16.black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/ll_right_menu"
        android:layout_toRightOf="@+id/ll_left_menu"
        android:text="标题" />

    <RelativeLayout

        android:id="@+id/ll_right_menu"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
            android:tint="@color/home_title_img_bg_color" />
    </RelativeLayout>
</RelativeLayout>