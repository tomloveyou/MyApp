<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_bottom_start_use"
        android:background="@color/white"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="#e0000000">

                <ImageView
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_menu"
                    android:tint="@color/home_title_img_bg_color" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="right"
                    android:orientation="vertical">

                    <skin.support.design.widget.SkinMaterialFloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        app:backgroundTint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_add_key_inside" />

                    <LinearLayout

                        android:alpha="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@color/white"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:layout_marginRight="16dp"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_setteing_icon"
                            android:tint="@color/home_title_img_bg_color" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="46dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_theme_preview_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="66dp"
                            android:layout_height="66dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/habit_stretch" />

                            <RelativeLayout
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_alignParentRight="true">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_theme_pro" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Yang"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/icon_search"
                        android:tint="@color/white" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/icon_notify"
                        android:tint="@color/white" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_setteing_icon"
                        android:tint="@color/white" />
                </LinearLayout>

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_leftText="23"
                    app:calendar_item_rightText="14"
                    app:calendar_item_text="今天"
                    app:calendar_item_textColor="@color/black" />

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_leftImgSrc="@drawable/ic_menu"
                    app:calendar_item_rightText="9"
                    app:calendar_item_text="收集箱"
                    app:calendar_item_textColor="@color/black" />

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_isRightImg="true"
                    app:calendar_item_rightImgSrc="@drawable/arrow_up"
                    app:calendar_item_text="标签"
                    app:calendar_item_textColor="@color/black" />

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_text="重要紧急"
                    app:calendar_item_textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/line_color" />

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_isRightImg="true"
                    app:calendar_item_rightImgSrc="@drawable/arrow_up"
                    app:calendar_item_text="工作"
                    app:calendar_item_textColor="@color/black" />

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_rightText="9"
                    app:calendar_item_text="办公司"
                    app:calendar_item_textColor="@color/black" />

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_leftImgSrc="@drawable/ic_menu"
                    app:calendar_item_leftImgTintColor="@color/yellow"
                    app:calendar_item_rightText="3"
                    app:calendar_item_text="生活"
                    app:calendar_item_textColor="@color/yellow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/line_color" />

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_text="添加清单"
                    app:calendar_item_textColor="@color/black" />

                <com.yl.markremember.ui.widget.CalendarItemView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:calendar_item_text="管理清单和标签"
                    app:calendar_item_textColor="@color/black" />
            </LinearLayout>


        </FrameLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_bottom_start_use"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="开始使用"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>