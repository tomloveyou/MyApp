<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_above="@+id/tv_bottom_start_use"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="66dp"
                        android:layout_height="66dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/habit_stretch" />
                        <RelativeLayout
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_theme_pro" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:text="Yang"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/icon_search"
                    android:tint="@color/white" />

                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/icon_notify"
                    android:tint="@color/white" />
            </LinearLayout>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_rightText="14"
                    app:calendar_item_leftText="23"
                    app:calendar_item_text="今天"
                    app:calendar_item_textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_text="收集箱"
                    app:calendar_item_rightText="9"
                    app:calendar_item_leftImgSrc="@drawable/ic_menu"
                    app:calendar_item_textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_text="标签"
                    app:calendar_item_textColor="@color/black"
                    android:layout_width="match_parent"
                    app:calendar_item_isRightImg="true"
                    app:calendar_item_rightImgSrc="@drawable/arrow_up"
                    android:layout_height="46dp"/>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_text="重要紧急"
                    app:calendar_item_textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/line_color"
                    android:layout_height="1dp"/>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_isRightImg="true"
                    app:calendar_item_rightImgSrc="@drawable/arrow_up"
                    app:calendar_item_text="工作"
                    app:calendar_item_textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_text="办公司"
                    app:calendar_item_rightText="9"
                    app:calendar_item_textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_text="生活"
                    app:calendar_item_rightText="3"
                    app:calendar_item_leftImgSrc="@drawable/ic_menu"
                    app:calendar_item_leftImgTintColor="@color/yellow"
                    app:calendar_item_textColor="@color/yellow"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/line_color"
                    android:layout_height="1dp"/>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_text="添加清单"
                    app:calendar_item_textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>
                <com.yl.markremember.ui.widget.CalendarItemView
                    app:calendar_item_text="管理清单和标签"
                    app:calendar_item_textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>
            </LinearLayout>



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_bottom_start_use"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="开始使用"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>