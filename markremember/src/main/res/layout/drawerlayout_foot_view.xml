<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_add_label"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="18dp"
            android:src="@drawable/ticktick_horizontal_new_tag"
            android:tint="@color/home_title_img_bg_color" />

        <TextView
            style="@style/TextStyle16.black"
            android:layout_weight="1"
            android:text="添加清单" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_label_manager"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="18dp"
            android:src="@drawable/ticktick_horizontal_new_tag"
            android:tint="@color/home_title_img_bg_color" />

        <TextView
            style="@style/TextStyle16.black"
            android:layout_weight="1"
            android:text="管理清单和标签" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_new_user_leader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="18dp"
            android:src="@drawable/ticktick_horizontal_new_tag"
            android:tint="@color/home_title_img_bg_color" />

        <TextView
            style="@style/TextStyle16.black"
            android:layout_weight="1"
            android:text="新手指南" />
    </LinearLayout>
</LinearLayout>