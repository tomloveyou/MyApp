<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/activity_user_sex_ll"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_marginTop="@dimen/divider_decoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别" />
        <TextView
            android:id="@+id/activity_user_sex"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <include layout="@layout/widget_arrow_right_layout"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_user_nation_ll"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_marginTop="@dimen/divider_decoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="国家" />
        <TextView
            android:id="@+id/activity_user_nation"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <include layout="@layout/widget_arrow_right_layout"/>
    </LinearLayout>

</LinearLayout>